<%- block("title").append("<title>New Image</title>") %>
<!-- Form to upload a new image -->
<%- layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="text-center mb-4">
    <h2>Upload an Image</h2>
  </div>
  <form id="uploadForm" enctype="multipart/form-data" action="/users/<%= user._id %>" method="POST" class="border p-4 rounded shadow-sm">
    <!-- File upload block -->
    <div class="mb-3">
      <label for="image" class="form-label">Select an image file:</label>
      <input type="file" id="images" name="images" class="form-control" accept="image/*" multiple />
    </div>

    <div class="text-center my-3">
      <strong>OR</strong>
    </div>

    <!-- URL input block -->
    <div class="mb-3">
      <label for="imageURL" class="form-label">Enter image URL:</label>
      <input type="url" id="imageURL" name="imageURL" class="form-control" placeholder="https://example.com/image.jpg" />
    </div>

    <!-- Submit button -->
    <div class="text-center">
      <button type="submit" class="btn btn-primary w-50 w-md-auto">
        Upload
      </button>
    </div>
  </form>
</div>