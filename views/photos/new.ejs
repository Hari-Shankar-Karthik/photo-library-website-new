<%- block("title").append("<title>New Image</title>") %>
<%- block("scripts").append('<script src="/js/new.js"></script>') %>
<%- layout("layouts/boilerplate") %>

<div class="container my-5">
  <div class="text-center mb-4">
    <h2>Upload an Image</h2>
  </div>
  <form id="uploadForm" enctype="multipart/form-data" action="/users/<%= user._id %>" method="POST" class="border p-4 rounded shadow-sm needs-validation" novalidate>
    <!-- File upload block -->
    <div class="mb-3">
      <label for="images" class="form-label">Select up to 10 image files:</label>
      <input type="file" id="images" name="images" class="form-control" accept="image/*" multiple required />
      <div class="invalid-feedback">You can upload a maximum of 10 files.</div>
    </div>

    <div class="text-center my-3">
      <strong>OR</strong>
    </div>

    <!-- URL input block -->
    <div class="mb-3">
      <label for="imageURL" class="form-label">Enter image URL:</label>
      <input type="url" id="imageURL" name="imageURL" class="form-control" placeholder="https://example.com/image.jpg" required />
      <div class="invalid-feedback">You cannot fill both fields. Please choose one.</div>
    </div>

    <!-- Loading spinner (hidden initially) -->
    <div id="loading-container" style="display: none;" class="mb-3 text-center">
      <div class="spinner-border" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
    </div>

    <!-- Submit button -->
    <div class="text-center">
      <button type="submit" class="btn btn-primary w-50 w-md-auto">
        Upload
      </button>
    </div>
  </form>
</div>